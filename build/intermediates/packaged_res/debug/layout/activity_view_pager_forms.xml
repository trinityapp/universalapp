<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ViewPagerForms">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/back_button_custom"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/Head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="fgdhgfgfdhgfdsagtfrdsgfdsgfdsfd"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </RelativeLayout>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@color/colorPrimaryDark"/>-->
    <!--    <View android:layout_width="fill_parent" android:id="@+id/focus_view" android:layout_height="0dp" android:focusable="true" android:focusableInTouchMode="true"><requestFocus/></View>-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:minHeight="?actionBarSize"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabIndicatorColor="@color/newColor"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabTextColor="@android:color/transparent"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Small"
        ></com.google.android.material.tabs.TabLayout>
<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="5dp"-->
<!--        android:background="@color/lineColor"-->
<!--        android:layout_marginLeft="13dp"-->
<!--        android:layout_marginRight="13dp"-->
<!--        />-->
    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/type"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:id="@+id/viewpager"
        android:layout_height="wrap_content"
        >

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>

